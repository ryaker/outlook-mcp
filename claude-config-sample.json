{
  "mcpServers": {
    "outlook-assistant": {
      "command": "node",
      "args": [
        "/path/to/outlook-mcp/index.js"
      ],
      "env": {
        "USE_TEST_MODE": "false",
        "OUTLOOK_CLIENT_ID": "YOUR_AZURE_CLIENT_ID_HERE",
        "OUTLOOK_CLIENT_SECRET": "YOUR_AZURE_CLIENT_SECRET_HERE"
      }
    }
  }
}
